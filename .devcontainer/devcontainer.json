// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"mounts": [
		"source=/mnt/weather_api_data/,target=/workspaces/weather_data_api/weatherapi/historic_weather_api/static/,type=bind,consistency=cached"
	],
	"postCreateCommand": "pip install --user -r /workspaces/weather_data_api/requirements.txt",

	"runArgs": ["--network=host"],
	// Forward port 8000 from inside the container to the host.
	"forwardPorts": [8000],

	// Use 'postCreateCommand' to run commands after the container is created.
	// This will install your Python dependencies.

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root",

	// Optional: you can also specify additional configurations or tools.
	// "features": {}
}
